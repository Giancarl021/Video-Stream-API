{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ESNext"],
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "lib"],
    "include": ["server.ts", "src/**/*.ts"]
}